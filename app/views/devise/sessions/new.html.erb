<%= form_for(resource, :html => {:class => 'form-horizontal'}, as: resource_name, url: session_path(resource_name)) do |f| %>
<fieldset>
  <legend>Sign In</legend>
  <div class="form-group">
    <%= f.label :email, "Email", :class=>'col-lg-3 control-label' %>
    <div class="col-lg-9">
      <%= f.email_field :email, autofocus: true, :class=>'form-control', :placeholder => "Email", :id => "inputEmail" %>
    </div> 
  </div>

  <div class="form-group">
    <%= f.label :password, "Password", :class=>'col-lg-3 control-label' %>
    <div class="col-lg-9">
      <%= f.password_field :password, autocomplete: "off", :class=>'form-control', :placeholder => "Password", :id => "inputPassword" %>
    <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me %> <span class="label label-info">Remember me</span>
      </label>
    </div>
    <% end -%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-6 col-lg-offset-3">
      <%= f.submit "Log in", :class => 'btn btn-primary' %>
    </div>
  </div>
<fieldset>
<% end %>
<%= render "devise/shared/links" %>
